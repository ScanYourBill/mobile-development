<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFFFF"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/r5d4yuljtwh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFAF0FF"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/rb9q3liwrvic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/ryka1nib48u"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:paddingBottom="253dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/rcylzud50wh"
                        android:layout_width="369dp"
                        android:layout_height="358dp"
                        android:layout_marginBottom="16dp"

                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:orientation="vertical"
                        android:paddingVertical="5dp"
                        android:paddingLeft="17dp">

                        <LinearLayout
                            android:id="@+id/r6xx64b6awok"
                            android:layout_width="17dp"
                            android:layout_height="20dp"
                            android:layout_marginBottom="127dp"
                            android:orientation="vertical">


                        </LinearLayout>

                        <TextView
                            android:id="@+id/reghkzh9igm6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="11dp"
                            android:textFontWeight="900"
                            android:text="@string/welcome_first"
                            android:textColor="#333333"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:id="@+id/r85atmipfwph"
                            android:layout_width="268dp"
                            android:layout_height="106dp"
                            android:layout_marginEnd="145dp"
                            android:layout_marginBottom="25dp"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/r3o4sw46y9en"
                                android:layout_width="237dp"
                                android:layout_height="71dp"
                                android:layout_marginTop="18dp"
                                android:src="@drawable/logo"
                                android:text="@string/project_title"
                                android:textColor="#5E07A0"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/rwcklxq8bw5n"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/insert_username"
                            android:textColor="#6C7988"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <EditText
                        android:id="@+id/usernameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginBottom="57dp"
                        android:background="@drawable/username_field_canvas"
                        android:hint="@string/username"
                        android:inputType="text"
                        android:paddingHorizontal="17dp"
                        android:paddingVertical="21dp"
                        android:textColorHint="#6C7988"
                        android:textSize="14sp" />


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/submitBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:paddingVertical="19dp"
                        android:layout_marginHorizontal="16dp"
                        app:backgroundTint="@null"
                        android:background="@drawable/purple_btn_canvas"
                        app:rippleColor="@android:color/transparent"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:gravity="center"
                        android:text="@string/next"
                        android:textColor="#C6C6C6"
                        android:textSize="12sp"
                        app:cornerRadius="0dp"
                        style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

